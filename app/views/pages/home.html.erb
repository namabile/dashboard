<div class="page-header">
	<h1>
		Today's Orders <small> Through <%= @last_order_time %></small>
	</h1>
</div>
<div class="well">
	<h2>
		<small>Total orders</small> <%= number_to_currency(@total_orders) %>
		<button id="refresh-button" class="btn btn-primary pull-right"><i class="icon-refresh icon-white"></i> Refresh</button>
	</h2>
</div>
<br />
<table class="table table-striped table-bordered">
	<thead>
		<th>Order ID</th>
		<th>Ordered At</th>
		<th>Order Method</th>
		<th>Amount</th>
		<th>Event</th>
		<th>Event Date</th>
	</thead>
	<% @orders.each do |order| %>
	<tr>
		<td><%= link_to "#{order[:order_id]}", "http://intranet.razorgator.com/admin/trackresultsdetails.asp?orderid=#{order[:order_id]}" %></td>
		<td><%= order[:order_date].strftime("%l:%M %p") %></td>
		<td><%= order[:order_type_name] %></td>
		<td><%= number_to_currency(order[:ticket_revenue]) %></td>
		<td><%= order[:event_name] %></td>
		<td><%= order[:event_date].strftime("%b %e, %y") %></td>
	</tr>
	<% end %>
</table>